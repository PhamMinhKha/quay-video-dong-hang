{
  "name": "phan-mem-dong-hang",
  "version": "1.0.0",
  "type": "module",
  "description": "Ứng dụng quay video + quét QR code cho đóng gửi hàng (offline)",
  "author": "Phạm Minh Kha",
  "license": "MIT",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "npm run build:main && concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:renderer": "vite build",
    "build:main": "tsc -p main/tsconfig.json && tsc -p main/tsconfig.main.json && tsc -p main/tsconfig.database.json && node fix_preload.js",
    "dist": "npm run build && electron-builder",
    "start": "electron .",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.example.phanmemdonghangg",
    "productName": "Phan Mem Dong Hang",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/",
      "package.json",
      "node_modules/"
    ],
    "asar": true,
    "icon": "logo.png",
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "icon": "logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "logo.png",
      "uninstallerIcon": "logo.png"
    },
    "dmg": {
      "background": "build/dmg-background.png",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "icon": "logo.png"
    }
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "jsqr": "^1.4.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.0.0",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0",
    "wait-on": "^7.0.0"
  },
  "keywords": [
    "electron",
    "qrcode",
    "video",
    "offline",
    "vite",
    "typescript"
  ]
}
